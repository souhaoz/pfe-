<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('router-app') }}
    {% endblock %}
</head>
<body>

{% block body %}

    <div id="router-app" data-token="{{ csrf_token('authenticate') }}"
         data-last-email="{{ last_username }}"
         data-is-authenticated="{{ is_authenticated }}">
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('router-app') }}
{% endblock %}
</body>
</html>